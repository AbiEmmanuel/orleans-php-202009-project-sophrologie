{% extends 'base.html.twig' %}

{% block title %}Logo index{% endblock %}

{% block body %}
    <h1>Logo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Logo</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for logo in logos %}
            <tr>
                <td>{{ logo.id }}</td>
                <td>{{ logo.Name }}</td>
                <td>{{ logo.Logo }}</td>
                <td>{{ logo.Description }}</td>
                <td>
                    <a href="{{ path('logo_show', {'id': logo.id}) }}">show</a>
                    <a href="{{ path('logo_edit', {'id': logo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logo_new') }}">Create new</a>
{% endblock %}
