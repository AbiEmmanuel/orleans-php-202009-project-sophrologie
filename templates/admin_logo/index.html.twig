{% extends 'layoutAdmin.html.twig' %}

{% block title %}Logos entreprises partenaires | {{ parent() }}{% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('adminList') }}
    {% endblock %}

{% block body %}

    <main class="sheettop container">

        <a class="btn btn-primary" href="{{ path('admin_logo_new') }}">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor"
                 xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path fill-rule="evenodd"
                      d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
            Ajouter une nouvelle entreprise
        </a>

        <h1>Entreprises partenaires - Logos </h1>

        <table class=" table table-hover event-list">
            <thead class="bg-primary text-light">
            <tr>

                <th>Entreprise</th>
                <th>Logo</th>
                <th>Description</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for logo in logos %}
                <tr>

                    <td>{{ logo.name }}</td>
                    <td><img class="img-thumbnail" src="{{ logo.logo }}" alt="{{ logo.name }}"></td>
                    <td>{{ logo.description }}</td>
                    <td>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun logo d'entreprise partenaire enregistr√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <a class="btn btn-primary" href="{{ path("admin_home") }}">


            Accueil administration
        </a>
    </main>
{% endblock %}
