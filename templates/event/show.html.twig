{% extends 'layout.html.twig' %}

{% block title %}Actualités | {{ parent() }}{% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('event') }}
    {% endblock %}
{% block body %}
    <section class="container sheettop mb-3 mb-lg-5">

        <h4 class="mb-4 text-center">{{ event.category.name }}</h4>
        <h2 class="mb-4 text-center">{{ event.title }}</h2>
        <h4 class="mb-4 text-center">{{event.eventdate is empty ? '' : event.eventdate|date('d/m/Y')}}</h4>

        <section class="section2 jumbotron container bg-white py-4 py-lg-5 px-0 mb-0 d-lg-flex text-lg-left">
            <div class="d-flex align-items-center justify-content-center">
                <img class="img-fluid " src="{{ vich_uploader_asset(event, 'pictureFile') }}" alt="{{ event.title }}">
            </div>
            <div class="container ml-lg-5 text-left text-lg-left">
                <p class="card-text">{{ event.description }}</p>
                <p class="card-text">{{ event.summary }}</p>

            </div>

        </section>
        <section class="section2 jumbotron container bg-white py-4 py-lg-5 px-0 mb-0 d-lg-flex text-lg-left">
            <div class="d-flex container text-left text-lg-left p-0">
            <p class="card-text">{{ event.article|raw }}</p>
            </div>
        </section>


        <div class="container mr-auto px-0 mb-4">
            {% if event.eventlink != '' %}
                <a href="{{ event.eventlink}}" class=" text-primary mb-5">Site de l'évènement</a>
            {% else %}
            {% endif %}
        </div>
            <div class="text-xl-center">
                {% if event.video != '' %}
                    <iframe  width="560" height="315" src="{{ event.video}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                {% else %}
                {% endif %}
            </div>

    </section>

<div class="container mr-auto px-0">
    <h5 class="mb-4 text-lg-left pt-5">
        {% if event.date != '' %}
            {{ 'publié le ' }}{{event.date is empty ? '' : event.date|date('d/m/Y')}}
        {% else %}
        {% endif %}
    </h5>

    <a href="{{ path("event_index") }}" class="btn btn-primary text-light mb-5">Retour à la liste des actualités</a>
</div>
{% endblock %}


