{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block title %}Actualités | {{ parent() }}{% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('event') }}
    {% endblock %}
{% block body %}

    <header>
        <h1 class="card-title text-center py-5">ACTUALITES</h1>
    </header>

{% block form_row %}
<div class="container-fluid w-25 form_row text-primary">

    {{ form_start(form) }}

    {{ form_widget(form) }}

    <button class="btn btn-primary">Rechercher</button>

    {{ form_end(form) }}
</div>
{% endblock form_row %}

    <section class="container-fluid w-75 sheettop">

            <div class="row mx-0 d-flex justify-content-center container-fluid mt-2 pt-3">
            {% for event in events %}

                <ul class="col-lg-3 col-md-6  col-sm-12 list-group list-group-flush m-5 p-2">
                    <li class="list-group-item text-center text-uppercase themes-sophro "><h5>{{ event.category.name }}</h5></li>
                    <li class="list-group-item text-center text-uppercase themes-sophro h-50"><h3>{{ event.title }} </h3></li>
                    <li><img class="img-thumbnail little mb-4" src="{{ event.url }}" alt="{{ event.title }}"/> </li>
                    <li class="w-100 h-100 text-justify pb-4"><h6>{{event.eventdate is empty ? '' : event.eventdate|date('d/m/Y')}}</h6> {{ event.description }}</li>

                    <li> <a href="{{ path ('event_show',{'id' :event.id}) }}" class="btn btn-primary" role="button">En savoir plus</a></li>
                </ul>

            {% else %}
                "Il n'y a actuellement aucun évènement de programmé, merci de venir consulter cette section ultérieurement"
            {% endfor %}
        </div>
    </section>

{% endblock %}
