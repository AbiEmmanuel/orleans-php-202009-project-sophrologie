<form method="post" action="{{ path('admin_delete_speciality', {'id': speciality.id}) }}"
      onsubmit="return confirm('Êtes vous sûre de bien vouloir supprimer cette spécialité ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ speciality.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
