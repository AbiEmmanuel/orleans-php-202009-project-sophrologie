{% extends 'layout.html.twig' %}
{% form_theme requestForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('request') }}
{% endblock %}

{% block body %}
    <div class="container justify-content-center align-items-center py-5 ">

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="text-center py-3">Réinitialiser votre mot de passe</h1>

        <div class="d-flex justify-content-center py-2">
            <p>
                Entrez votre adresse e-mail et nous vous enverrons
                un lien de réinitialisation pour votre mot de passe.
            </p>
        </div>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}


        <div class="d-flex justify-content-center align-items-center py-3">
            <button class="btn btn-primary">Envoyer la réinitialisation de mot de passe par e-mail</button>
        </div>

            {{ form_end(requestForm) }}
    </div>
{% endblock %}
