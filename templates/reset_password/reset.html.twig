{% extends 'layout.html.twig' %}
{% form_theme resetForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container d-flex  flex-column justify-content-center align-items-center py-5">
        <h1 class="py-5">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Confirmer votre nouveau mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
